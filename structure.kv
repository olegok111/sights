<Button>:
    background_color: .8,.8,.8,1
    background_normal: ''
    font_size: 30
    halign : 'center'

<Label>:
    color: 0,0,0,1
    font_size: 26

<ImageButton>:
    padding: 10

<GridLayout>:
    spacing: [16, 16]
    padding: [16]

<MainScreen>:
    Image:
        source: 'icons/title.jpg'
    FloatLayout:
        background_color: .51,.51,.51,1
        background_normal: ''
        Button:
            text: 'Новая игра'
            size_hint: .4, .13
            pos_hint: {'x':.3, 'y':.08}
            background_color: .8,.8,.8,1
            background_normal: ''
            color: 0,0,0,1
            on_press:
                root.manager.transition = SlideTransition()
                root.manager.transition.direction = 'down'
                sns('quests')
                root.manager.current = sns()

<QuestChooseScreen>:
    Image:
        source: 'icons/quest_choose_only_zao.jpg'
    FloatLayout:
        Button:
            text: 'ЗАО\n(Запад Москвы)'
            size_hint: .23, .23
            pos_hint: {'x':.295, 'y':.37}
            background_color: .8,.8,.8,.3
            background_normal: ''
            color: 0,0,0,1
            on_press:
                root.manager.transition = NoTransition()
                sns('qzao1')
                root.manager.current = sns()
    ImageButton:
        source: 'icons/new_back.png'
        size_hint: .1, .1
        pos_hint: {'x':.02, 'y':.88}
        on_press:
            root.manager.transition = SlideTransition()
            root.manager.transition.direction = 'up'
            sns('main')
            root.manager.current = sns()

<ZAO1>:
    id: qzao1
    canvas.before:
        Color:
            rgb: 1,1,1
        Rectangle:
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        Label:
            id: zao_question
            size_hint: 1,.1
            text: 'Какой из этих флагов\nпринадлежит ЗАО?'
            halign: 'center'
        GridLayout:
            cols: 2
            rows: 2
            spacing: [16, 16]
            padding: [16]
            ImageButton:
                id: img_btn_0
                source: 'icons/flag_uzao.jpg'
                on_press:
                    life_count()
                    root.manager.current = sns()
            ImageButton:
                id: img_btn_1
                source: 'icons/flag_cao.jpg'
                on_press:
                    life_count()
                    root.manager.current = sns()
            ImageButton:
                id: img_btn_2
                source: 'icons/flag_zao.jpg'
                on_press:
                    pwrite(current_player, int(pget(current_player)['points'])+5)
                    root.manager.transition = SwapTransition()
                    sns('qzao2')
                    root.manager.current = sns()
            ImageButton:
                id: img_btn_3
                source: 'icons/flag_vao.jpg'
                on_press:
                    life_count()
                    root.manager.current = sns()
                
    ImageButton:
        source: 'icons/new_back.png'
        size_hint: .08, .08
        pos_hint: {'x':.01, 'y':.91}
        on_press:
            root.manager.transition = SlideTransition()
            root.manager.transition.direction = 'up'
            sns('main')
    Label:
        id: zao1_score_label
        size_hint: .1, .1
        pos_hint: {'right':1, 'top':1}
        text: ''

